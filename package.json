{
  "name": "azeroth-reborn-launcher",
  "version": "1.1.0",
  "description": "Launcher de Azeroth Reborn",
  "main": "main.js",
  "author": "Azeroth Reborn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/neeme22/azeroth-reborn-launcher.git"
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -w",
    "publish": "electron-builder -w --publish always",
    "build": "npm run dist",
    "make:ico": "node make-ico.js"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.6.0",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.4"
  },
  "dependencies": {
    "check-disk-space": "^3.4.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.azerothreborn.launcher",
    "productName": "Azeroth Reborn Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/.cache/**"
    ],
    "extraResources": [
      {
        "from": "resources/bin",
        "to": "bin"
      },
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "artifactName": "Azeroth-Reborn-Launcher-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Azeroth Reborn Launcher"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "neeme22",
        "repo": "azeroth-reborn-launcher",
        "releaseType": "release"
      }
    ]
  }
}
